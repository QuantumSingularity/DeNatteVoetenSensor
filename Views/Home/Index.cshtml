@model SensHagen.Controllers.ghome

@{
    ViewData["Title"] = "Home Page";



}

<img src="images/boots.png" style="position:absolute; top:10px; left:10px;"/>

<div class="text-center">
    <h2 class="display-4">Users</h2>
    @foreach (var item in Model.Users)
    {
        @item.EmailAddress<br />
    }
    <h2 class="display-4">Sensors</h2>
    @foreach (var item in Model.Sensors)
    {
        <h4>@item.MacAddress - @item.User.Name `@item.Name`<br />(@item.RegisterDate.ToString("dd-MM-yyyy HH:mm:ss")) (@item.ReRegisterDate?.ToString("dd-MM-yyyy HH:mm:ss"))</h4>
        <ul>
        @foreach (var item2 in item.LogItems)
        {
            <li>@item2.TimeStamp - @item2.LogType - @item2.BatteryVoltage?.ToString("F2")</li>
        }
        </ul>

    }
    
</div>
